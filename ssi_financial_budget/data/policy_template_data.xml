<odoo>
<data noupdate="1">
<record id="policy_template" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_financial_budget_budget" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<record id="policy_template_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">draft</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_restart_approval" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','restart_approval_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if not document.approval_template_id:
    result = True</field>
</record>

<record id="policy_template_cancel" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','cancel_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">draft,confirm,open,done</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_restart" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','restart_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">cancel,reject</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_reject" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','reject_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record id="policy_template_approve" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','approve_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record id="policy_template_manual_number" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','manual_number_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">draft</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="policy_template_done" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','done_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">open</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record id="policy_template_terminate" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','financial_budget.budget'),('name','=','terminate_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">open</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
</data>
</odoo>
